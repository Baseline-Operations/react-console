{
  "name": "@baseline-operations/react-console",
  "version": "0.1.3",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baseline-operations/react-console.git"
  },
  "type": "module",
  "description": "React 19+ TypeScript library for building console/terminal applications using JSX",
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/esm/cli.js"
      },
      "require": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/cjs/cli.cjs"
      }
    },
    "./router": {
      "import": {
        "types": "./dist/router.d.ts",
        "default": "./dist/esm/router.js"
      },
      "require": {
        "types": "./dist/router.d.ts",
        "default": "./dist/cjs/router.cjs"
      }
    },
    "./selection": {
      "import": {
        "types": "./dist/selection.d.ts",
        "default": "./dist/esm/selection.js"
      },
      "require": {
        "types": "./dist/selection.d.ts",
        "default": "./dist/cjs/selection.cjs"
      }
    },
    "./layout": {
      "import": {
        "types": "./dist/layout.d.ts",
        "default": "./dist/esm/layout.js"
      },
      "require": {
        "types": "./dist/layout.d.ts",
        "default": "./dist/cjs/layout.cjs"
      }
    },
    "./animations": {
      "import": {
        "types": "./dist/animations.d.ts",
        "default": "./dist/esm/animations.js"
      },
      "require": {
        "types": "./dist/animations.d.ts",
        "default": "./dist/cjs/animations.cjs"
      }
    },
    "./theme": {
      "import": {
        "types": "./dist/theme.d.ts",
        "default": "./dist/esm/theme.js"
      },
      "require": {
        "types": "./dist/theme.d.ts",
        "default": "./dist/cjs/theme.cjs"
      }
    },
    "./storage": {
      "import": {
        "types": "./dist/storage.d.ts",
        "default": "./dist/esm/storage.js"
      },
      "require": {
        "types": "./dist/storage.d.ts",
        "default": "./dist/cjs/storage.cjs"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/hooks.d.ts",
        "default": "./dist/esm/hooks.js"
      },
      "require": {
        "types": "./dist/hooks.d.ts",
        "default": "./dist/cjs/hooks.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "prepublishOnly": "npm run build",
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:js": "rollup -c",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "clean": "rm -rf dist",
    "prepare": "husky install || true",
    "precommit": "lint-staged",
    "prepush": "npm run typecheck && npm test -- --run && npm run lint"
  },
  "keywords": [
    "react",
    "react19",
    "console",
    "terminal",
    "cli",
    "jsx",
    "typescript",
    "reconciler"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "cli-cursor": "^5.0.0",
    "react-reconciler": "^0.33.0"
  },
  "optionalDependencies": {
    "@mastra/node-speaker": "^0.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.0",
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.25.0",
    "@babel/preset-typescript": "^7.25.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^25.2.2",
    "@types/react": "^19.0.0",
    "@types/react-reconciler": "^0.33.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-plugin-react-compiler": "^19.0.0-beta-45e3631b-20250413",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "react": "^19.1.0",
    "rollup": "^4.57.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
